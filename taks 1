#include <stdio.h>
#include <stdlib.h>

int main()
{   SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    printf("Введіть три значення:\n");
    float t1, t2, t3, r, avg; //оголошення змінних
    scanf ("%f",&t1); scanf ("%f",&t2); scanf ("%f",&t3); // зчитування часу за який зїдає пиріг кожен з гостей
    r = (t1 * t2 * t3) / (t2 * t3 + t1 * t3 + t1 * t2); // обчислення часу, необхідного для з'їдання пирога
    printf ("Час, необхідний для з'їдання пирога: %.2f годин", r); // відповідь
    return 0;
}
