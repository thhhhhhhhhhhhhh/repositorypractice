#include <stdio.h>

int main() {
    SetConsoleCP(1251); // Встановлення кодової сторінки для вводу консолі (українська кодова сторінка)
    SetConsoleOutputCP(1251); // Встановлення кодової сторінки для виводу консолі (українська кодова сторінка)

    int r;
    printf("Введіть число розрядів (р): ");
    scanf("%d", &r);

    // Ініціалізація початкових значень
    long long dp[r+1][2][2];
    dp[1][0][0] = 1; // Число з одним розрядом, закінчується на 1, не має трьох однакових цифр поруч
    dp[1][1][0] = 1; // Число з одним розрядом, закінчується на 0, не має трьох однакових цифр поруч
    dp[1][0][1] = 0; // Число з одним розрядом, закінчується на 1, має трьох однакових цифр поруч
    dp[1][1][1] = 0; // Число з одним розрядом, закінчується на 0, має трьох однакових цифр поруч

    // Обчислення кількості чисел
    for (int i = 2; i <= r; i++) {
        dp[i][0][0] = dp[i-1][1][0] + dp[i-1][1][1]; // Число з i розрядами, закінчується на 1, не має трьох однакових цифр поруч
        dp[i][1][0] = dp[i-1][0][0] + dp[i-1][0][1]; // Число з i розрядами, закінчується на 0, не має трьох однакових цифр поруч
        dp[i][0][1] = dp[i-1][0][0]; // Число з i розрядами, закінчується на 1, має трьох однакових цифр поруч
        dp[i][1][1] = dp[i-1][1][0]; // Число з i розрядами, закінчується на 0, має трьох однакових цифр поруч
    }

    // Виведення результату
    long long count = dp[r][0][0] + dp[r][1][0] + dp[r][0][1] + dp[r][1][1]; // Загальна кількість чисел з r розрядами
    if (r > 2)
        count = count + 1 + pow(2, r - 3); // Додавання чисел з трьома нулями і більше
    if (r == 3)
        count = count - 1; // Вирахування числа 000
    printf("Кількість чисел із %d розрядів: %lld\n", r, count);

    return 0;
}
